[core]
    hooksPath = /Users/comonadd/gitconfig/hooks
[user]
	email = dmitri.guzeev@gmail.com
	name = Dmitry Guzeev
[alias]
    co = commit
    ck = checkout
    a = add
    s = status
    b = branch
    cam = commit --amend --no-edit
    camv = commit --amend --no-edit --no-verify
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    mff = merge --no-ff --no-edit
    pf = push --force
    um = fetch origin master:master
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lg = lg1
    lgonline = log --graph --oneline
    branches = for-each-ref --format='%(HEAD) %(color:cyan)%(refname:short)%(color:reset) - %(color:yellow)%(contents:subject)%(color:reset) %(color:green)(%(committerdate:relative))%(color:reset) [%(color:blue)%(authorname)%(color:reset)]' --sort=-committerdate refs/heads/
    brd = branch -d
    brD = branch -D
    recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format='%(refname:short)'
[color]
    ui = true
[push]
    default = current
[diff]
    tool = meld
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[core]
	editor = nvim
	excludesfile = /Users/comonadd/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
	template = /Users/comonadd/.stCommitMsg
[interactive]
	diffFilter = diff-so-fancy --patch
